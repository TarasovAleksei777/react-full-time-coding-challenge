{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.graphql",
  ],
  "exclude": [
    "node_modues"
  ]
}